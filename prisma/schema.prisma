// https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String       @id
  displayName    String
  disabled       Boolean
  importCode     String
  // imports        UserImport[]
  settings       UserSettings @relation(fields: [userSettingsId], references: [id])
  userSettingsId Int
}

