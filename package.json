{
  "name": "spotistats-api",
  "version": "1.0.0",
  "description": "The official API for the Spotistats app (Android + iOS) ðŸ’š",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "eslint": "eslint",
    "compile": "tsc -p .",
    "compile:watch": "tsc -p . -w",
    "start:dev": "nodemon -r dotenv/config src/index.js dotenv_config_path=./src/config/.env.development",
    "start:prod": "docker-compose -p spotistats -f docker/prod.yml up -d",
    "start:redis": "docker-compose -p spotistats -f docker/redis.yml up -d",
    "start:db": "docker-compose -p spotistats -f docker/db.yml up -d",
    "prisma:migrate": "prisma migrate dev --preview-feature --schema src/modules/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema src/modules/prisma/schema.prisma",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "author": "Sjoerd Bolten",
  "license": "",
  "prisma": {
    "schema": "src/modules/prisma/schema.prisma"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.0",
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/platform-express": "^7.6.13",
    "@prisma/client": "^2.18.0",
    "@types/cache-manager": "^3.4.0",
    "@types/express-rate-limit": "^5.1.1",
    "@types/in-app-purchase": "^1.11.0",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.28",
    "aes256": "^1.1.0",
    "cache-manager": "^3.4.1",
    "cache-manager-redis-store": "^2.0.0",
    "csv-string": "^4.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-ping": "^0.4.2",
    "express-rate-limit": "^5.2.6",
    "in-app-purchase": "^1.11.4",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.1",
    "pg": "^8.5.1",
    "prom-client": "^13.1.0",
    "rate-limit-redis": "^2.1.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "short-unique-id": "^3.2.3",
    "spotify-web-api-node": "^5.0.2",
    "windows-1252": "^1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.11",
    "@types/express-fileupload": "^1.1.6",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/luxon": "^1.25.0",
    "@types/node": "^14.14.31",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "@types/node-schedule": "^1.3.1",
    "@types/spotify-web-api-node": "^4.0.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma": "^2.18.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  }
}
