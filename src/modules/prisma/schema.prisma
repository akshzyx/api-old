// https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String          @id
  displayName    String
  disabled       Boolean
  email          String?
  image          String?
  country        String?
  product        String?
  settings       UserSettings    @relation(fields: [userSettingsId], references: [id])
  userSettingsId Int
  apiClient      ApiClient       @relation(fields: [apiClientId], references: [id])
  apiClientId    String
  isPlus         Boolean         @default(false)
  inAppPurchase  InAppPurchase[]
  shareSettings  SharingSettings @default(FRIENDS)
  friendsFrom    User[]          @relation("Friends", references: [id])
  friendsWith    User[]          @relation("Friends", references: [id])
}

model UserSettings {
  id                    Int      @id @default(autoincrement())
  refreshToken          String
  accessToken           String
  accessTokenExpiration DateTime
  User                  User[]
}

model ApiClient {
  id     String @id
  secret String
  count  Int    @default(0)
  users  User[]
}

model InAppPurchase {
  id            String   @id
  purchaseDate  DateTime
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  productId     String
  googleOrderId String?
}

enum SharingSettings {
  NONE
  FRIENDS
  ALL
}
